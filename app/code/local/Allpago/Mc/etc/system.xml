<?xml version="1.0"?><config>    <sections>        <allpago>            <label>Allpago</label>            <tab>sales</tab>            <class>allpago-section</class>            <header_css>allpago-header</header_css>            <frontend_type>text</frontend_type>            <sort_order>375</sort_order>            <show_in_default>1</show_in_default>            <show_in_website>1</show_in_website>            <show_in_store>1</show_in_store>            <groups>                <allpago_mc translate="label">                    <label>+ Conversão</label>                    <sort_order>20</sort_order>                    <show_in_default>1</show_in_default>                    <show_in_website>1</show_in_website>                    <show_in_store>1</show_in_store>                                        <fields>                        <grava_log translate="label">                            <label>Grava Log</label>                            <frontend_type>select</frontend_type>                            <source_model>adminhtml/system_config_source_yesno</source_model>                            <sort_order>1</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                        </grava_log>                                                    <qtd_tentativas translate="label">                            <label>Quantidade de Tentativas</label>                            <frontend_type>text</frontend_type>                            <sort_order>2</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment>Quantidade máxima de tentativas de autorização antes de desistir. Deve ser >= 1, valor menor que 1 será desconsiderado.</comment>                        </qtd_tentativas>                        <tempo_espera translate="label">                            <label>Tempo de Espera</label>                            <frontend_type>select</frontend_type>                            <source_model>allpago_mc/source_hours</source_model>                            <sort_order>3</sort_order>                            <show_in_default>1</show_in_default>                            <show_in_website>1</show_in_website>                            <show_in_store>1</show_in_store>                            <comment>Tempo de espera em caso de falha para repetir a autorização ou captura.</comment>                        </tempo_espera>                    </fields>                </allpago_mc>            </groups>        </allpago>    </sections></config>